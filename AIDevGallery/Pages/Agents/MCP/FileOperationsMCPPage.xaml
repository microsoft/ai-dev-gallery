<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Pages.FileOperationsMCPPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="1,0,0,0">
        <ScrollViewer>
            <StackPanel Margin="48,32,48,48" Spacing="24">
                <TextBlock
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="File Operations MCP" />
                <TextBlock
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="File Operations Model Context Protocol integration placeholder."
                    TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
