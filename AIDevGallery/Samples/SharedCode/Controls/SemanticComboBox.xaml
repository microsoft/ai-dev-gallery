<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AIDevGallery.Samples.SharedCode">

    <Style TargetType="local:SemanticComboBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SemanticComboBox">
                    <Grid>
                        <AutoSuggestBox
                            x:Name="SemanticSuggestBox"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            ItemsSource="{Binding SearchResults, RelativeSource={RelativeSource TemplatedParent}}"
                            PlaceholderText="Start typing to semantically search categories..." />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
