<?xml version="1.0" encoding="utf-8" ?>
<samples:BaseSamplePage
    x:Class="AIDevGallery.Samples.WCRAPIs.SemanticSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:AIDevGallery.Samples.WCRAPIs"
    xmlns:samples="using:AIDevGallery.Samples"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Spacing="8">
            <controls:TabView x:Name="TextDataTabView"
                TabItemsSource="{x:Bind TextDataItems}"
                AddTabButtonClick="DataTabView_AddTabButtonClick"
                TabCloseRequested="DataTabView_TabCloseRequested"
                CanDrag="False"
                CanDragTabs="False"
                SelectedIndex="0">
                <TabView.TabItemTemplate>
                    <DataTemplate x:DataType="local:TextDataItem">
                        <TabViewItem Header="{x:Bind Id}">
                            <TextBox Text="{x:Bind Value, Mode=TwoWay}"
                                     Tag="{x:Bind Id}"
                                     TextChanged="SemanticTextBox_TextChanged"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="120"
                                     Margin="0,7,0,0"/>
                        </TabViewItem>
                    </DataTemplate>
                </TabView.TabItemTemplate>
            </controls:TabView>
            <controls:TabView x:Name="ImageDataTabView"
                TabItemsSource="{x:Bind ImageDataItems}"
                AddTabButtonClick="DataTabView_AddTabButtonClick"
                TabCloseRequested="DataTabView_TabCloseRequested"
                CanDrag="False"
                CanDragTabs="False"
                SelectedIndex="0">
                <TabView.TabItemTemplate>
                    <DataTemplate x:DataType="local:ImageDataItem">
                        <TabViewItem Header="{x:Bind Id}">
                            <Image Source="{x:Bind ImageSource}" Tag="{x:Bind Id}" Height="150" Margin="12" Stretch="Uniform" ImageOpened="ImageData_ImageOpened"/>
                        </TabViewItem>
                    </DataTemplate>
                </TabView.TabItemTemplate>
            </controls:TabView>
            <TextBox
                 x:Name="SearchTextBox"
                 AutomationProperties.Name="Prompt input"
                 PlaceholderText="Enter a word or phrase to search for"
                 TextWrapping="Wrap" />
            <ProgressBar
                x:Name="OutputProgressBar"
                VerticalAlignment="Bottom"
                IsIndeterminate="True"
                Visibility="Collapsed" />
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <InfoBar
                        x:Name="IndexingMessage"
                        IsOpen="False"
                        Severity="Informational"
                        Title="Indexing"
                        Message="Partial results may be available." 
                        Padding="0"/>
                    <InfoBar
                        x:Name="RemovedItemMessage"
                        IsOpen="False"
                        Severity="Informational"
                        Message="Item has been removed" 
                        Padding="0"/>
                </StackPanel>
                
                <Button
                    x:Name="SearchButton"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Click="SearchButton_Click"
                    Content="Search"
                    Margin="10,0,0,0"
                    Style="{StaticResource AccentButtonStyle}" />
            </Grid>
        </StackPanel>
        <Grid
            x:Name="ResultsGrid"
            Grid.Row="2"
            Visibility="Collapsed">
            <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}">Search Results:</TextBlock>
            <ScrollViewer
                Margin="0,25,0,0"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Visible">
                <TextBlock
                    x:Name="ResultsTextBlock"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    IsTextSelectionEnabled="True"
                    TextWrapping="WrapWholeWords" />
            </ScrollViewer>
        </Grid>
    </Grid>
</samples:BaseSamplePage>
