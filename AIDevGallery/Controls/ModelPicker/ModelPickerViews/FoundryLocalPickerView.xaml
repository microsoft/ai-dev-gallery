<?xml version="1.0" encoding="utf-8"?>
<local:BaseModelPickerView
    x:Name="Root"
    x:Class="AIDevGallery.Controls.ModelPickerViews.FoundryLocalPickerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AIDevGallery.Controls.ModelPickerViews"
    xmlns:models="using:AIDevGallery.Models"
    xmlns:utils="using:AIDevGallery.Utils"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:vm="using:AIDevGallery.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical" Spacing="8">
                <TextBlock
                     Margin="16"
                    IsTextSelectionEnabled="True"
                     x:Name="AvailableModelsTxt"
                     Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    <Run Text="Cached Models (" /><Run Text="{x:Bind FoundryLocalUrl}" /><Run Text=")" />
                </TextBlock>
                <ListView
                     x:Name="ModelSelectionItemsView"
                     ItemsSource="{x:Bind AvailableModels, Mode=OneWay}"
                    SelectionChanged="ModelSelectionView_SelectionChanged"
                     SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:ModelDetails">
                            <toolkit:SettingsCard
                                    MinHeight="48"
                                    Padding="4,10,14,10"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="0">
                                <toolkit:SettingsCard.Resources>
                                    <Thickness x:Key="SettingsCardHeaderIconMargin">0,0,14,0</Thickness>
                                    <x:Double x:Key="SettingsCardWrapThreshold">286</x:Double>
                                    <x:Double x:Key="SettingsCardHeaderIconMaxSize">18</x:Double>
                                </toolkit:SettingsCard.Resources>
                                <toolkit:SettingsCard.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                                VerticalAlignment="Center"
                                                Text="{x:Bind Name}"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTipService.ToolTip="{x:Bind Name}" />
                                    </Grid>
                                </toolkit:SettingsCard.Header>
                                <toolkit:SettingsCard.HeaderIcon>
                                    <ImageIcon AutomationProperties.AccessibilityView="Control" 
                                               AutomationProperties.Name="Model source icon" 
                                               Source="{x:Bind Icon}" />
                                </toolkit:SettingsCard.HeaderIcon>
                                <toolkit:SettingsCard.Description>
                                    <StackPanel>
                                        <toolkit:WrapPanel
                                                HorizontalSpacing="6"
                                                Orientation="Horizontal"
                                                VerticalSpacing="2">
                                            <TextBlock VerticalAlignment="Center">
                                                    <Run Text="{x:Bind ParameterSize}" />
                                                    <Run Text=" • " />
                                                    <Run Text="{x:Bind utils:AppUtils.FileSizeToString(Size)}" />
                                            </TextBlock>
                                        </toolkit:WrapPanel>
                                    </StackPanel>
                                </toolkit:SettingsCard.Description>
                                <Border
                                        Width="28"
                                        Height="28"
                                        Margin="0,0,1,0"
                                        Padding="0">
                                    <Button
                                            Width="28"
                                            Height="28"
                                            Padding="0"
                                            ui:FrameworkElementExtensions.AncestorType="toolkit:SettingsCard"
                                            AutomationProperties.Name="More options"
                                            Content="{ui:FontIcon Glyph=&#xE712;, FontSize=16}"
                                            Style="{StaticResource SubtleButtonStyle}"
                                            ToolTipService.ToolTip="More options">
                                        <Button.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Click="CopyUrl_Click"
                                                    Icon="{ui:FontIcon Glyph=&#xE8A5;}"
                                                    Tag="{x:Bind}"
                                                    Text="Copy Url" />
                                                <!--<MenuFlyoutItem
                                                    Click="ViewModelDetails_Click"
                                                    Icon="{ui:FontIcon Glyph=&#xE8A5;}"
                                                    Tag="{x:Bind}"
                                                    Text="Open Model Details"/>-->
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Border>
                            </toolkit:SettingsCard>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock
                    x:Name="DownloadableModelsTxt"
                    Margin="16,32,0,8"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Downloadable Models" />
                <ItemsRepeater
                    Grid.Row="1"
                    IsTabStop="False"
                    ItemsSource="{x:Bind DownloadableModels, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="4" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="vm:DownloadableModel">
                            <toolkit:SettingsCard
                                MinHeight="48"
                                Padding="20,8,16,6"
                                Background="Transparent"
                                BorderThickness="0"
                                CornerRadius="0"
                                Tag="{x:Bind}">
                                <toolkit:SettingsCard.Resources>
                                    <Thickness x:Key="SettingsCardHeaderIconMargin">0,0,14,0</Thickness>
                                    <x:Double x:Key="SettingsCardWrapThreshold">286</x:Double>
                                    <x:Double x:Key="SettingsCardHeaderIconMaxSize">18</x:Double>
                                </toolkit:SettingsCard.Resources>
                                <toolkit:SettingsCard.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            MaxWidth="268"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind ModelDetails.Name}"
                                            TextTrimming="CharacterEllipsis"
                                            ToolTipService.ToolTip="{x:Bind ModelDetails.Name}" />
                                    </Grid>
                                </toolkit:SettingsCard.Header>
                                <toolkit:SettingsCard.HeaderIcon>
                                    <ImageIcon AutomationProperties.AccessibilityView="Control" AutomationProperties.Name="Model source icon" Source="{x:Bind ModelDetails.Icon}" />
                                </toolkit:SettingsCard.HeaderIcon>
                                <toolkit:SettingsCard.Description>
                                    <StackPanel>
                                        <toolkit:WrapPanel
                                            HorizontalSpacing="4"
                                            Orientation="Horizontal"
                                            VerticalSpacing="2">
                                            <TextBlock>
                                                <Run Text="{x:Bind ModelDetails.ParameterSize}" />
                                                <Run Text="params" />
                                                <Run Text=" • " />
                                                <Run Text="{x:Bind utils:AppUtils.FileSizeToString(ModelDetails.Size)}" />
                                            </TextBlock>
                                        </toolkit:WrapPanel>
                                    </StackPanel>
                                </toolkit:SettingsCard.Description>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border
                                        Width="28"
                                        Height="28"
                                        Margin="0,0,1,0"
                                        Padding="0">
                                        <Button
                                            Width="28"
                                            Height="28"
                                            Padding="0"
                                            ui:FrameworkElementExtensions.AncestorType="toolkit:SettingsCard"
                                            AutomationProperties.Name="More options"
                                            Content="{ui:FontIcon Glyph=&#xE712;,
                                                                  FontSize=16}"
                                            Style="{StaticResource SubtleButtonStyle}"
                                            ToolTipService.ToolTip="More options">
                                            <Button.Flyout>
                                                <MenuFlyout Placement="Bottom">
                                                    <MenuFlyoutItem
                                                        Click="CopyUrl_Click"
                                                        Icon="{ui:FontIcon Glyph=&#xE8A5;}"
                                                        Tag="{x:Bind}"
                                                        Text="Copy Url" />  
                                                    <!--<MenuFlyoutItem
                                                        Click="ViewModelDetails_Click"
                                                        Icon="{ui:FontIcon Glyph=&#xE8A5;}"
                                                        Tag="{x:Bind}"
                                                        Text="Open Model Details"/>-->
                                                </MenuFlyout>
                                            </Button.Flyout>
                                        </Button>
                                    </Border>
                                    <Grid>
                                        <Button
                                            Width="28"
                                            Height="28"
                                            Padding="0"
                                            VerticalAlignment="Center"
                                            AutomationProperties.HelpText="Download model"
                                            AutomationProperties.Name="{x:Bind ModelDetails.Name}"
                                            Click="DownloadModelButton_Click"
                                            Content="{ui:FontIcon Glyph=&#xE896;,
                                                                  FontSize=16}"
                                            HighContrastAdjustment="None"
                                            IsEnabled="{x:Bind IsDownloadEnabled}"
                                            Style="{StaticResource SubtleButtonStyle}"
                                            Tag="{x:Bind}"
                                            ToolTipService.ToolTip="Download model"
                                            Visibility="{x:Bind CanDownload, Mode=OneWay}" />

                                        <ProgressRing
                                            Width="24"
                                            Height="24"
                                            Background="{ThemeResource ControlStrongStrokeColorDisabledBrush}"
                                            IsIndeterminate="False"
                                            Visibility="{x:Bind vm:DownloadableModel.BoolToVisibilityInverse(CanDownload), Mode=OneWay}"
                                            Value="{x:Bind Progress, Mode=OneWay}" />
                                    </Grid>
                                </StackPanel>
                            </toolkit:SettingsCard>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</local:BaseModelPickerView>
