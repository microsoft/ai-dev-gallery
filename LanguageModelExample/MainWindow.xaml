<Window
    x:Class="LanguageModelExample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LanguageModelExample"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="{ThemeResource SystemAccentColor}" Padding="20">
            <TextBlock Text="Microsoft.Windows.AI.Text.LanguageModel 示例" 
                       FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="展示LanguageModel的各项功能 - 专为Visual Studio优化" 
                       FontSize="14" Foreground="White" Opacity="0.8" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Spacing="20">
                
                <!-- Quick Start Section -->
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🚀 快速开始" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBlock Text="选择示例数据快速测试各项功能：" FontSize="14" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,15">
                            <Button x:Name="LoadBasicPromptButton" Content="加载文本生成示例" 
                                    Click="LoadBasicPromptButton_Click"/>
                            <Button x:Name="LoadSummaryButton" Content="加载摘要示例" 
                                    Click="LoadSummaryButton_Click"/>
                            <Button x:Name="LoadRewriteButton" Content="加载重写示例" 
                                    Click="LoadRewriteButton_Click"/>
                            <Button x:Name="LoadTableButton" Content="加载表格示例" 
                                    Click="LoadTableButton_Click"/>
                        </StackPanel>
                        <Button x:Name="LoadAllExamplesButton" Content="加载所有示例" 
                                HorizontalAlignment="Left" Click="LoadAllExamplesButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Basic Text Generation -->
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="1. 基础文本生成" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBox x:Name="BasicPromptTextBox" 
                                 PlaceholderText="输入提示词，例如：'Tell me a short story'"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="80"/>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,15,0,0">
                            <Button x:Name="BasicGenerateButton" Content="生成文本" 
                                    Click="BasicGenerateButton_Click"/>
                            <Button x:Name="ClearBasicButton" Content="清空" 
                                    Click="ClearBasicButton_Click"/>
                        </StackPanel>
                        <TextBox x:Name="BasicResultTextBox" 
                                 PlaceholderText="生成结果将显示在这里"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="120" 
                                 Margin="0,15,0,0" IsReadOnly="True"/>
                    </StackPanel>
                </Border>

                <!-- Text Summarization -->
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="2. 文本摘要" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBox x:Name="SummaryInputTextBox" 
                                 PlaceholderText="输入要摘要的长文本"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="120"/>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,15,0,0">
                            <Button x:Name="SummaryButton" Content="生成摘要" 
                                    Click="SummaryButton_Click"/>
                            <Button x:Name="ClearSummaryButton" Content="清空" 
                                    Click="ClearSummaryButton_Click"/>
                        </StackPanel>
                        <TextBox x:Name="SummaryResultTextBox" 
                                 PlaceholderText="摘要结果将显示在这里"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="80" 
                                 Margin="0,15,0,0" IsReadOnly="True"/>
                    </StackPanel>
                </Border>

                <!-- Text Rewriting -->
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="3. 文本重写" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBox x:Name="RewriteInputTextBox" 
                                 PlaceholderText="输入要重写的文本"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="100"/>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,15,0,0">
                            <Button x:Name="RewriteButton" Content="重写文本" 
                                    Click="RewriteButton_Click"/>
                            <Button x:Name="ClearRewriteButton" Content="清空" 
                                    Click="ClearRewriteButton_Click"/>
                        </StackPanel>
                        <TextBox x:Name="RewriteResultTextBox" 
                                 PlaceholderText="重写结果将显示在这里"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="100" 
                                 Margin="0,15,0,0" IsReadOnly="True"/>
                    </StackPanel>
                </Border>

                <!-- Text to Table Conversion -->
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="4. 文本转表格" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBox x:Name="TableInputTextBox" 
                                 PlaceholderText="输入要转换为表格的文本"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="100"/>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,15,0,0">
                            <Button x:Name="TableButton" Content="转换为表格" 
                                    Click="TableButton_Click"/>
                            <Button x:Name="ClearTableButton" Content="清空" 
                                    Click="ClearTableButton_Click"/>
                        </StackPanel>
                        <TextBox x:Name="TableResultTextBox" 
                                 PlaceholderText="表格结果将显示在这里"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="120" 
                                 Margin="0,15,0,0" IsReadOnly="True"/>
                    </StackPanel>
                </Border>

                <!-- Status and Progress -->
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📊 状态信息" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBlock x:Name="StatusTextBlock" Text="准备就绪" 
                                   FontSize="14" Foreground="{ThemeResource SystemTextFillColorSecondaryBrush}"/>
                        <ProgressRing x:Name="ProgressRing" IsActive="False" 
                                      Width="20" Height="20" Margin="0,10,0,0"/>
                        
                        <!-- Debug Info for Visual Studio -->
                        <Expander Header="🔍 调试信息 (Visual Studio)" Margin="0,15,0,0">
                            <StackPanel Spacing="5">
                                <TextBlock x:Name="DebugInfoTextBlock" Text="调试信息将显示在这里" 
                                           FontFamily="Consolas" FontSize="12"/>
                                <Button x:Name="RefreshDebugInfoButton" Content="刷新调试信息" 
                                        HorizontalAlignment="Left" Click="RefreshDebugInfoButton_Click"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window> 